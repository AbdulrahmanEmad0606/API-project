									"pm.test(\"Register a new valid Author successfully and response code 201 Created\",function(){\r",
									"    pm.expect(pm.response.code).to.equal(200);\r",
									"    pm.expect(pm.response.status).to.equal(\"OK\")\r",
									"})\r",
									"\r",
									"// check that the firstname & lastname should be mandatory\r",
									"let myResponse = pm.response.json();\r",
									"pm.test(\"firstname & lastname should be mandatory\",function(){\r",
									"   pm.expect(myResponse.firstName).to.not.oneOf([\"\",\" \"]);\r",
									"   pm.expect(myResponse.lastName).to.not.oneOf([\"\",\" \"]);\r",
									"})\r",
									"\r",
									"// set user id as an env varialble to use it in edit and delete end-points\r",
									"pm.environment.set(\"userId\", myResponse.id);\r",
									"pm.environment.set(\"firstName\", myResponse.firstName);\r",
									"pm.environment.set(\"lastName\", myResponse.lastName);"
